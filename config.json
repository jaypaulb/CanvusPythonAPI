{
  "server": {
    "base_url": "https://your-canvus-server.com",
    "api_version": "v1",
    "timeout": 30,
    "max_retries": 3,
    "verify_ssl": true
  },
  "authentication": {
    "api_key": "your-api-key-here"
  },
  "test_data": {
    "test_canvas": {
      "name": "Test Canvas",
      "description": "Canvas for testing"
    },
    "test_folder": {
      "name": "Test Folder",
      "description": "Folder for testing"
    },
    "test_group": {
      "name": "Test Group",
      "description": "Group for testing"
    },
    "test_user": {
      "email": "testuser@example.com",
      "name": "Test User",
      "password": "secure-password"
    }
  },
  "test_settings": {
    "cleanup_after_tests": true,
    "create_test_data": true,
    "use_existing_data": false,
    "parallel_tests": false,
    "test_timeout": 60,
    "file_upload_timeout": 120
  },
  "endpoints": {
    "server_info": "/api/v1/server-info",
    "server_config": "/api/v1/server-config",
    "canvases": "/api/v1/canvases",
    "folders": "/api/v1/canvas-folders",
    "groups": "/api/v1/groups",
    "users": "/api/v1/users",
    "clients": "/api/v1/clients",
    "license": "/api/v1/license",
    "audit_log": "/api/v1/audit-log"
  },
  "validation": {
    "check_response_schema": true,
    "validate_file_uploads": true,
    "test_error_conditions": true,
    "test_permissions": true
  },
  "logging": {
    "level": "INFO",
    "log_requests": true,
    "log_responses": false
  }
} 